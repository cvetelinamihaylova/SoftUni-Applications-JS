{{>header}}
<div id="detailsMovie">
    {{#with movie}}
    <h1>Details</h1>
    <div class="movie">
        <h2>Title: {{title}}</h2>
        <img src={{image}} />
        <p>{{description}}</p>
        <h2>Genres</h2>
        <ul class="genres">
            <li>{{genres}}</li>
        </ul>
        <p>Available Tickets: {{availableTickets}}</p>
        <button><a href="#/buy/{{objectId}}">Buy Ticket</a></button>
    </div>
    {{/with}}
</div>
{{>footer}}